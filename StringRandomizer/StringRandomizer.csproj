    <Version Condition=" '$(Version)' == '' ">1.0.0-pre</Version>
    <AssemblyVersion Condition=" '$(AssemblyVersion)' == '' ">1.0.1.0</AssemblyVersion>
    <Authors>Sarthak Mahapatra</Authors>
    <PackageDescription>.NET library to Generator Random Strings</PackageDescription>
    <PackageLicenseUrl>https://raw.githubusercontent.com/sarthakmahapatra/StringRandomizer/master/LICENSE.md</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/sarthakmahapatra/StringRandomizer</PackageProjectUrl>
